{% extends 'layout.html.twig'%}

{%block title%}
Liste PFEs
{% endblock%}

{% block body%}
    <div class="row">
        {% for key in pfe %}
            {% if key.id%2!=0 %}
                {% set bgColor= "bg-primary" %}
            {%else%}
                {% set bgColor= "bg-info" %}
            {% endif%}
            <div class="card text-white {{bgColor}} mb-3 m-2" style="max-width: 18rem">
                <div class="card-body">
                    <h5 class="card-title">Title: {{ key.title }}</h5>
                    <p class="card-text">Student: {{ key.student }}</p>
                    <p class="card-text">Entreprise: {{ key.entreprise }}</p>
                </div>
            </div>
        {% endfor%}
    </div>
{%endblock%}