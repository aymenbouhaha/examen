<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.css')}}">
    <title>{% block title %}Document {%endblock%} </title>
</head>
<body>
<div class="container">
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_welcome')}}">TP</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('liste')}}">Liste des PFEs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_add_pfe')}}">Ajouter un PFE</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_affichage')}}">Stats</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {% for value in app.session.flashBag.get("success") %}
        <div class="alert alert-success">{{ value }}</div>
    {% endfor %}
    {% for value in app.session.flashBag.get("error") %}
        <div class="alert alert-danger">{{ value }}</div>
    {% endfor %}

    {% block body%}
    {% endblock%}
</div>
</body>
</html>